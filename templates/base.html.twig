<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" type="text/css" href="{{asset('css/app.css')}}" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# encore_entry_link_tags('app') #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheets" type="text/css" href="{{asset('css/app.css')}}" />
            <link href="{{asset("node_modules/@fortawesome/fontawesome-free/css/all.css")}}"rel="stylesheets"  />

        {% endblock %}

        {% block javascripts %}
            {# encore_entry_script_tags('app') #}
            <link href="{{asset('node_modules/@fortawesome/fontawesome-free/js/all.js')}}"rel="stylesheets"  />
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" ></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>

        {% endblock %}
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container-fluid">
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
       <a class="navbar-brand" href="{{path('home')}}">Home</a>
       {% endif %}
       
       <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
    <div class="collapse navbar-collapse" id="mynavbar">
      <ul class="navbar-nav me-auto">
        
      <li class="nav-item">
        <a class="nav-link" href="{{path('game')}}">All Games</a>
      </li>
      </ul>
      <form class="d-flex" method="post" action="{{path('recherche')}}" >
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <input class="form-control me-2" type="text" placeholder="Search" name="RechercheNom">
        <button class="btn btn-primary" type="button" ><i class="fa-solid fa-magnifying-glass"></i></button>
      {% endif %}  
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a class="dropdown-item" href="{{path('security_logout')}}"><i class="fa-solid fa-right-from-bracket"></i>Logout</a></li>
                {% else %}
                  
                    <li><a class="dropdown-item" href="{{path('login')}}"><i class="fa-solid fa-right-to-bracket"></i>Login</a></li>
                    <li><a class="dropdown-item" href="{{path('user_registration')}}"><i class="fa-solid fa-plus"></i>Register</a></li>
                {% endif %}

            </ul>
        </li>
    </ul>
      </form>
    </div>
  </div>
</nav> 
    <body>
                

        {% block body %}

        {% endblock %}
    </body>
</html>
